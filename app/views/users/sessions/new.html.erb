<% set_meta_tags title: full_title('ログイン'), description: '将棋アスクにログインすると、将棋アスクのサービスがさらに便利にご利用いただけます。アカウントをお持ちでない方もいますぐ無料で登録しましょう。' %>
<div class="container">
  <h2 class="devise-heading">ログイン</h2>
  <div class="row">
    <div class="col-sm-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインを記憶する %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn-lg btn-primary center-block login-btn" %>
        </div>
      <% end %>
      <ul class="link-from-devise list-inline text-center">
        <li><%= link_to "新規会員登録", new_registration_path(resource_name) %></li>
        <li><%= link_to "パスワードを忘れた方", new_password_path(resource_name) %></li>
      </ul>
    </div>
  </div>
</div>
