<li class="id="question-<%= question.id %>">
  <div class="container">
    <div class="row">
      <div class="col-sm-1 text-center question-list">
        <p class ="status bg-success">受付中</p>
      <dl　class="answer-heading">
        <dt class ="answer-title">回答</dt>
          <dd class="reply-count"><%= question.replies.count %></dd>
      </dl>
    </div>
      <div class="col-sm-7 question-list">
        <h2 class="title"> <%= link_to question.title, question %> </h2>
        <% if question.categories.count >= 1 %>
        <span class="category label"><%= question.categories.pluck(:name).join(", ") %></span>
        <% end %>
        <ul class="question-bottom text-right">
          <% if question.user %>
          <%= link_to image_tag(question.user.image.url, :size => "20x20"),  question.user %>
          <li class="index-user-name"><%= question.user.name %></li>
          <% end %>
          <li class="index-time"><%= time_ago_in_words(question.created_at) %>前に投稿</li>
        </ul>
      </div>
    </div>
  </div>
</li>
