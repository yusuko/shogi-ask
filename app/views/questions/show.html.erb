<h1><%= link_to @question.title, @question %></h1>
<p>
  <% if @question.status == 'unsolved' %>
  <p class="status-show">受付中</p>
  <% else %>
  <span class="status-show">解決済み</span>
  <% end %>
</p>
<p><%= time_ago_in_words(@question.created_at) %> 前に投稿</p>

<p><%= @question.content %></p>
<p><%= @question.categories.pluck(:name).join(", ") %></p>
<div class="float-left">
  <% if @question.user %>
  <%= image_tag(@question.user.image.url, :size => "20x20") %>
  <%= @question.user.name %>
  <% end %>
</div>

<p> Replies/index </p>
<p class="answer-count"><%= @replies.count %> 件の回答 </p>
<ol class="reply">
<%= render @replies %>
</ol>
<p> Replies/new </p>

<%= form_for @reply do |f| %>

  <%= f.label :あなたの回答 %>
  <%= f.text_field :content %>

  <%= f.hidden_field :question_id, value: @question.id %>

  <%= f.submit("回答する") %>
<% end %>
